<!--pages/order/index.wxml-->
<view class="order-container">
  <!-- 订单列表 -->
  <scroll-view 
    scroll-y="true" 
    class="order-list" 
    bindscrolltolower="loadMoreOrders"
    enable-back-to-top="true"
    enhanced="true"
    show-scrollbar="true">
    <view class="order-list-content">
      <view class="order-item" wx:for="{{orders}}" wx:key="id">
        <view class="order-header">
          <text class="order-no">订单号：{{item.order_no}}</text>
          <text class="order-status {{item.dispatch_status === 2 ? 'delivering' : ''}}">{{item.status_text}}</text>
        </view>
        
        <view class="order-content">
          <view class="delivery-info">
            <view class="address">
              <text class="label">配送地址：</text>
              <text class="value">{{item.delivery_address}}</text>
            </view>
            <view class="customer">
              <text class="label">联系电话：</text>
              <text class="value">{{item.customer_phone}}</text>
            </view>
            <view class="fee">
              <text class="label">配送费：</text>
              <text class="value">¥{{item.delivery_fee}}</text>
            </view>
            <view class="weight" wx:if="{{item.goods_weight}}">
              <text class="label">货物重量：</text>
              <text class="value">{{item.goods_weight}}kg</text>
            </view>
          </view>
          

        </view>
      </view>
      
      <!-- 加载更多 -->
      <view class="load-more" wx:if="{{hasMore}}">
        <text>加载更多...</text>
      </view>
      
      <!-- 无数据提示 -->
      <view class="no-data" wx:if="{{orders.length === 0}}">
        <text>暂无订单数据</text>
      </view>
    </view>
  </scroll-view>

  <!-- 加载中提示 -->
  <loading wx:if="{{loading}}">加载中...</loading>
</view>